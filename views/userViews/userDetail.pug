extends ../layouts/main

block content
    .user-profile
        .user-profile__header
            img.u-avatar(src=user.avatarUrl)
            h4.profile__username=user.name
        if user._id === loggedUser._id
            .user-profile__btns
                a(href=`/users${routes.editprofile}`)
                    button ✏️ 프로필 수정하기
                a(href=`/users${routes.changepassword}`)
                    button 🔒 비밀번호 변경하기