extends layouts/main

block content
    .form-container 
        form(action=routes.editvideo(video.id), method="post")
            input(type="text",placeholder="비디오 제목", name="title", value=video.title)
            textarea(name="description", placeholder="비디오 설명")=video.description
            input(type="submit",value="동영상 갱신")
        a.form-container__link.form-container__link--delete(href=routes.deletevideo(video.id)) 
            button.delete 동영상 삭제
